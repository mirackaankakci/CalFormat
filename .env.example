# Environment Variables Template
# Bu dosyayı .env olarak kopyalayın ve gerçek değerlerle doldurun
# .env dosyası asla version control'e (git) eklenmemelidir!

# SiPay API Ayarları
SIPAY_APP_ID=your_sipay_app_id_here
SIPAY_APP_SECRET=your_sipay_app_secret_here
SIPAY_MERCHANT_KEY=your_sipay_merchant_key_here
SIPAY_TEST_MODE=true
SIPAY_HASH_SECRET=your_32_character_hash_secret_here

# Ikas API Ayarları
IKAS_CLIENT_ID=your_ikas_client_id_here
IKAS_CLIENT_SECRET=your_ikas_client_secret_here
IKAS_STORE_ID=your_store_name
IKAS_BASE_URL=https://yourstorename.myikas.com/api

# Güvenlik Ayarları
ENCRYPTION_KEY=your_32_character_encryption_key_here
DEBUG_MODE=false
LOG_LEVEL=ERROR

# Database Ayarları (opsiyonel)
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password

# Session Ayarları
SESSION_NAME=YOUR_APP_SESSION
SESSION_LIFETIME=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true

# Production Deployment
DEPLOYMENT_ENV=production
ALLOWED_IPS=127.0.0.1,::1

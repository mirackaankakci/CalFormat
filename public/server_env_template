# Environment Variables Template - Bu dosyayı .env olarak kopyalayın ve değerleri doldurun!

# SiPay Production Ayarları
SIPAY_APP_ID=your_sipay_app_id_here
SIPAY_APP_SECRET=your_sipay_app_secret_here
SIPAY_MERCHANT_KEY=your_sipay_merchant_key_here
SIPAY_HASH_SECRET=your_sipay_hash_secret_32_chars_here
SIPAY_TEST_MODE=false

# Ikas Production Ayarları
IKAS_CLIENT_ID=your_ikas_client_id_here
IKAS_CLIENT_SECRET=your_ikas_client_secret_here
IKAS_STORE_ID=your_store_id_here
IKAS_BASE_URL=https://yourstore.myikas.com/api
IKAS_API_TOKEN=your_ikas_api_token_here
IKAS_TEST_MODE=false

# Güvenlik Ayarları
ENCRYPTION_KEY=your_32_character_encryption_key_here123
DEBUG_MODE=false
LOG_LEVEL=ERROR

# Database (eğer kullanılacaksa)
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_secure_password_here

# Session Ayarları
SESSION_NAME=CALFORMAT_SESSION
SESSION_LIFETIME=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true
